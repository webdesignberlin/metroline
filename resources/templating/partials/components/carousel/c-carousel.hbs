---
component: carousel
---

<div class="c-carousel{{#if carouselModifierClass}}--{{carouselModifierClass}}{{/if}}{{#if carouselClass}} {{carouselClass}}{{/if}}"
     data-css="c-carousel">
	<ul class="carousel__list">
		{{#each data}}
			<li class="carousel__list-item{{#if itemClass}} {{itemClass}}{{/if}}">
				{{> c-figure }}
			</li>
		{{/each}}
	</ul>

</div>